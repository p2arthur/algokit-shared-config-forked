{
  "$schema": "https://typedoc.org/schema.json",
  "theme": "default",
  "cleanOutputDir": true,
  "githubPages": true,
  "gitRevision": "main",
  "highlightLanguages": ["typescript", "python", "json", "bash", "js", "yaml"],
  "exclude": [
    "**/*.spec.ts",
    "tests/**/*.*",
    "examples/**/*.*"
  ],
  "excludeInternal": true,
  "excludeReferences": true,
  "plugin": ["typedoc-plugin-markdown"],
  "entryPointStrategy": "expand",
  "includeHierarchySummary": true,
  "out": "docs/_api", 
  "outputs": [
    { "name": "html", "path": "docs/_html" },
    { "name": "markdown", "path": "docs/code" }
  ],

  "readme": "none", 
  "tsconfig": "tsconfig.build.json" 
}